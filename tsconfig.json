{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "types": [
      "vinxi/types/client",
      "jest",
      "@testing-library/jest-dom",
    ],
    "isolatedModules": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "newLine": "LF",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}